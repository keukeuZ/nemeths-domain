{
  "name": "nemeths-domain",
  "version": "0.1.0",
  "private": true,
  "description": "Blockchain RTS Game on Base L2",
  "scripts": {
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=@nemeths/server",
    "dev:client": "turbo run dev --filter=@nemeths/client",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:contracts": "turbo run test --filter=@nemeths/contracts",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:migrate": "pnpm --filter @nemeths/server db:migrate",
    "db:seed": "pnpm --filter @nemeths/server db:seed",
    "db:reset": "pnpm --filter @nemeths/server db:reset",
    "db:generate": "pnpm --filter @nemeths/server db:generate",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
